{{ if eq .hostname "CSMBP" -}}
[includeIf "gitdir:~/dev/work/"]
  path = .gitconfig-work
{{ end -}}

[user]
  name = Carson Seese
{{- if .workDevContainer }}
  email = {{ .workEmail }}
{{- else }}
  email = {{ .personalEmail }}
{{- end }}
  signingkey = key::{{ .gitPubKey }}

[gpg]
  format = ssh
  
[core]
  fsmonitor = true

[merge]
  conflictstyle = zdiff3
  ff = false

[rerere]
  enabled = true

{{ if eq .osid "darwin" -}}
[credential]
  helper = osxkeychain
{{ end }}

{{ if eq .osid "windows" -}}
[credential]
  helper = manager
{{ end }}

[commit]
  gpgSign = true

[tag]
  gpgSign = true

[gpg "ssh"]
	allowedSignersFile = {{ joinPath .chezmoi.homeDir ".ssh/allowed_signers" }}

[alias]
	pushfwl = push --force-with-lease