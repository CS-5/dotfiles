{{ if eq .hostname "CSMBP" -}}
[includeIf "gitdir:~/dev/work/"]
  path = .gitconfig-work
{{ end -}}

[user]
	name = Carson Seese
{{- if .workDevContainer }}
	email = {{ .workEmail }}
{{- else }}
	email = {{ .personalEmail }}
{{- end }}
{{- if .gitSignCommits }}
	signingkey = {{ .gitSshKeyPath }}.pub
{{- end }}

[gpg]
	format = ssh
	
[core]
	fsmonitor = true

[merge]
	conflictstyle = zdiff3

[rerere]
	enabled = true

{{ if eq .osid "darwin" -}}
[credential]
	helper = osxkeychain
{{ end -}}

{{ if eq .osid "windows" -}}
[credential]
	helper = manager
{{ end -}}

{{ if .gitSignCommits -}}
[commit]
	gpgSign = true
{{ end }}