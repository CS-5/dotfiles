{{- if not .isWorkDc }}
Host github.com
  Hostname github.com
  User git
  IdentityFile ~/.ssh/git_personal
  PreferredAuthentications publickey

Host github.com-work
  Hostname github.com
  User git
  IdentityFile ~/.ssh/git_work
  PreferredAuthentications publickey

Host *
  AddKeysToAgent yes
  IdentitiesOnly yes
  Compression yes
{{- if eq .os "darwin" }}
  UseKeychain yes
{{- end }}
{{ end -}}