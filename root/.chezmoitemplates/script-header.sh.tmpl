#!{{ lookPath "bash" }}

# shellcheck shell=bash

set -eufo pipefail

trap 'echo "❌ Script failed at line $LINENO"' ERR

log_info() { echo "ℹ️  $*"; }
log_success() { echo "✅ $*"; }
log_warning() { echo "⚠️  $*"; }
log_error() { echo "❌ $*" >&2; }

show_progress() {
    local msg="$1"
    echo "🔄 $msg..."
}

log_info "Starting: $(basename "$0")"